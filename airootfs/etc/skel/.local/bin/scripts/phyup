#!/bin/sh

mkdir -p "$HOME/.cache/phyos/"{dwm,dots}
cd "$HOME/.cache/phyos/$1"
dots="/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME"

if [ "$1" == "dwm" ]; then
    wget "https://github.com/PhyTech-R0/phyOS-PKGBUILD/tree/master/CORE/phyOS-dwm/PKGBUILD"
    makepkg -si
    kill -HUP $(pidof -s dwm) && xdotool key Super_L
    rm -rf "$1-phyOS" src pkg *.zst PKGBUILD
elif [ "$1" == "dots" ] && [ "$2" == "--force" ]; then
        git clone "https://github.com/PhyTech-R0/dotfiles" && mv dotfiles/.git "$HOME/.cfg" && cp -r dotfiles/.* "$HOME/" || rm -rf dotfiles
        $dots config --local status.showUntrackedFiles no
elif [ "$1" == "dots" ]; then
    if [[ -d "$HOME/.cfg" ]]; then
        $dots pull
    else
        git clone "https://github.com/PhyTech-R0/dotfiles" && mv dotfiles/.git "$HOME/.cfg" && cp -r dotfiles/.* "$HOME/" || rm -rf dotfiles
        $dots config --local status.showUntrackedFiles no
    fi
fi
